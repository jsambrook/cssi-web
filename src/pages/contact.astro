---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
import { getPageTitle, headerDefaults, footerDefaults } from "../data/pageDefaults";
import { footerContact } from "../data/site";
import { pageTitle, pageDescription, header, availability } from "../data/pages/contact";
---

<BaseLayout title={getPageTitle(pageTitle)} description={pageDescription}>
  <Header slot="header" {...headerDefaults} currentPath={Astro.url.pathname} />

  <Section background="muted">
    <div class="max-w-3xl mx-auto text-center space-y-4">
      <p class="text-xs uppercase tracking-wider text-accent">{header.label}</p>
      <h1 class="text-4xl sm:text-5xl">{header.heading}</h1>
      <p class="text-muted-foreground">{header.subheading}</p>
    </div>
  </Section>

  <Section>
    <div class="max-w-3xl mx-auto space-y-6 text-sm text-muted-foreground">
      <div class="space-y-2">
        <h2 class="text-xl">Email</h2>
        <a href={`mailto:${footerContact.email}`} class="text-primary hover:text-primary/80">{footerContact.email}</a>
      </div>
      <div class="space-y-2">
        <h2 class="text-xl">Availability</h2>
        <p>{availability}</p>
      </div>
      <div class="space-y-2">
        <h2 class="text-xl">Location</h2>
        <p>{footerContact.address}</p>
      </div>
    </div>
  </Section>

  <Footer slot="footer" {...footerDefaults} />
</BaseLayout>
