---
import { getCollection, render } from 'astro:content';
import BlogPostLayout from '../../layouts/BlogPostLayout.astro';
import { isPublished } from '../../utils/dates';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft && isPublished(data.date));
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const ogImage = post.data.ogImage ?? `/images/blog/${post.id}.png`;
const wordCount = post.body ? post.body.split(/\s+/).filter(Boolean).length : undefined;
---

<BlogPostLayout
  title={post.data.title}
  description={post.data.description}
  date={post.data.date}
  updatedDate={post.data.updatedDate}
  author={post.data.author}
  tags={post.data.tags}
  ogImage={ogImage}
  metaTitle={post.data.metaTitle}
  metaDescription={post.data.metaDescription}
  wordCount={wordCount}
>
  <Content />
</BlogPostLayout>
