---
import { getCollection } from "astro:content";
import PageLayout from "../layouts/PageLayout.astro";
import Section from "../components/Section.astro";
import { pageTitle, pageDescription, header } from "../data/pages/insights";
import { slugifyTag, tagHref } from "../utils/tags";

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<PageLayout pageTitle={pageTitle} description={pageDescription}>

  <Section background="muted">
    <div class="max-w-3xl mx-auto text-center space-y-4">
      <p class="text-xs uppercase tracking-wider text-accent">{header.label}</p>
      <h1 class="text-4xl sm:text-5xl">{header.heading}</h1>
      <p class="text-muted-foreground">{header.subheading}</p>
    </div>
  </Section>

  <Section>
    <div class="max-w-3xl mx-auto space-y-6">
      {posts.map((post, i) => (
        <article class:list={[i < posts.length - 1 && "border-b border-border pb-6"]}>
          <a href={`/insights/${post.id}`} class="group block space-y-1">
            <h2 class="text-xl group-hover:text-primary transition-colors">{post.data.title}</h2>
            <p class="text-sm text-muted-foreground">{post.data.description}</p>
            <div class="flex items-center gap-3 text-xs text-muted-foreground">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}
              </time>
              {post.data.tags.length > 0 && (
                <span class="flex gap-1.5">
                  {post.data.tags.map((t) => (
                    <a href={tagHref(t)} class="text-primary/70 hover:text-primary transition-colors" onclick="event.stopPropagation()">#{slugifyTag(t)}</a>
                  ))}
                </span>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>
  </Section>

</PageLayout>
