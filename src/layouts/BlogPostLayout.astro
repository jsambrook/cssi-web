---
/*
 * BlogPostLayout.astro
 *
 * Layout for individual blog/insights posts.
 * Wraps rendered markdown content with site chrome.
 */

interface Props {
  title: string;
  description: string;
  date: Date;
  author: string;
}

import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
import { getPageTitle, headerDefaults, footerDefaults } from "../data/pageDefaults";

const { title, description, date, author } = Astro.props;
const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={getPageTitle(title)} description={description}>
  <Header slot="header" {...headerDefaults} currentPath={Astro.url.pathname} />

  <Section>
    <article class="max-w-3xl mx-auto">
      <header class="mb-8 space-y-4">
        <a href="/insights" class="text-sm text-primary hover:text-primary/80">&larr; Back to Insights</a>
        <h1 class="text-4xl sm:text-5xl">{title}</h1>
        <p class="text-muted-foreground">{description}</p>
        <div class="text-sm text-muted-foreground">
          <span>{author}</span> &middot; <time datetime={date.toISOString()}>{formattedDate}</time>
        </div>
      </header>
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
    </article>
  </Section>

  <Footer slot="footer" {...footerDefaults} />
</BaseLayout>
