---
/*
 * PageLayout.astro
 *
 * Wrapper layout that combines BaseLayout with Header and Footer.
 * Reduces boilerplate in page files by providing default site configuration.
 *
 * Props:
 *   title: Page title (required)
 *   description: Meta description (optional)
 *   ogImage: Open Graph image path (optional)
 *   ctaText: Header CTA button text (default: "Get Started")
 *   ctaHref: Header CTA button link (default: "/contact")
 */

import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import {
  navItems,
  footerColumns,
  footerContact,
  legalLinks,
  copyright
} from '../data/site';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title,
  description,
  ogImage,
  ctaText = "Get Started",
  ctaHref = "/contact"
} = Astro.props;
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <Header
    slot="header"
    navItems={navItems}
    ctaText={ctaText}
    ctaHref={ctaHref}
  />

  <slot />

  <Footer
    slot="footer"
    columns={footerColumns}
    contact={footerContact}
    copyright={copyright}
    legalLinks={legalLinks}
  />
</BaseLayout>
