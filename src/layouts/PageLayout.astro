---
/*
 * PageLayout.astro
 *
 * Layout for inner pages (About, Approach, Contact, Insights).
 * Wraps BaseLayout with Header, Footer, and breadcrumb schema.
 */

interface Props {
  pageTitle: string;
  description?: string;
  ogType?: string;
  noindex?: boolean;
  jsonLd?: Record<string, unknown>[];
}

import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getPageTitle, headerDefaults, footerDefaults } from "../data/pageDefaults";
import { buildBreadcrumbSchema, buildWebPageSchema } from "../data/schema";
import { siteConfig } from "../data/site";

const { pageTitle, description, ogType, noindex, jsonLd = [] } = Astro.props;

const breadcrumb = buildBreadcrumbSchema([
  { name: "Home", href: "/" },
  { name: pageTitle, href: Astro.url.pathname },
]);

const webPage = buildWebPageSchema({
  name: pageTitle,
  description: description ?? siteConfig.defaultDescription,
  url: siteConfig.siteUrl + Astro.url.pathname,
});

const allJsonLd = [breadcrumb, webPage, ...jsonLd];
---

<BaseLayout title={getPageTitle(pageTitle)} description={description} ogType={ogType} noindex={noindex} jsonLd={allJsonLd}>
  <Header slot="header" {...headerDefaults} currentPath={Astro.url.pathname} />

  <slot />

  <Footer slot="footer" {...footerDefaults} />
</BaseLayout>
